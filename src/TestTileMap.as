				player1.acceleration.x = -player1.maxVelocity.x*4;
			if(FlxG.keys.RIGHT)
				player1.acceleration.x = player1.maxVelocity.x*4;
			if(FlxG.keys.justPressed("UP") && player1.isTouching(FlxObject.FLOOR))
				player1.velocity.y -= player1.maxVelocity.y/1.5;

